{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "exclude": ["old_commands", "node_modules"],
  "include": ["./eslint.config.js", "src/*", "src/**/*", "src/languages/**/*.json"]
}
