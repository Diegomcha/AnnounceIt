{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true
  },
  "exclude": ["old_commands"],
  "include": ["src/*", "src/**/*", "src/languages/**/*.json"]
}
