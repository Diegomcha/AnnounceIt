{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": ["old_commands", "node_modules", "dist", "dist/"],
}
